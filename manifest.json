{
  "manifest_version": 2,
  "name": "CustomFrame",
  "short_name": "CustomFrame",
  "version": "1.0.0",
  "description": "Display a custom page in a small overlay frame when you click the extension icon.",
  "author": "Jack Kingsman <jack.kingsman@gmail.com>",
  "homepage_url": "https://github.com/jkingsman/CustomFrame",
  "browser_action": {
    "default_title": "Show Frame",
    "default_icon": {
      "19": "logo/customframe-19.png",
      "38": "logo/customframe-38.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "logo/customframe-16.png",
    "48": "logo/customframe-48.png",
    "128": "logo/customframe-128.png"
  },
  "options_page": "options.html",
  "permissions": ["storage"]
}
